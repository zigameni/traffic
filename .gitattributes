# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.c     text diff=c
*.cc    text diff=cpp
*.cxx   text diff=cpp
*.cpp   text diff=cpp
*.c++   text diff=cpp
*.hpp   text diff=cpp
*.h     text diff=c
*.h++   text diff=cpp
*.hh    text diff=cpp
*.java  text diff=java
*.py    text diff=python
*.js    text diff=javascript
*.ts    text diff=typescript
*.html  text diff=html
*.css   text
*.sql   text
*.xml   text

# Documentation
*.md       text diff=markdown
*.txt      text
*.rst      text
*.pdf      binary
*.doc      binary
*.docx     binary

# Scripts
*.sh       text eol=lf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# Serialization
*.json     text
*.toml     text
*.yaml     text
*.yml      text

# Archives
*.7z       binary
*.gz       binary
*.tar      binary
*.tgz      binary
*.zip      binary

# Graphics
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.tif      binary
*.tiff     binary
*.ico      binary
*.svg      text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore     export-ignore

# Treat all Go files in this repo as binary, with no git magic updating
# line endings. Windows users contributing to Go will need to use a
# modern version of git and editors capable of LF line endings.
*.go -text diff=golang

# Treat SQL files as SQL for proper diff highlighting
*.sql linguist-detectable=true
*.sql linguist-language=sql

# Treat Docker files as such
Dockerfile linguist-detectable=true
Dockerfile linguist-language=Dockerfile
